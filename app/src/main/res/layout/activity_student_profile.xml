<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/updateProfile">
        <ScrollView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scroll">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:paddingBottom="30dp"
                android:paddingTop="10dp"
                android:gravity="center_horizontal">

                <android.support.v7.widget.CardView
                    android:layout_marginTop="10dp"
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardPreventCornerOverlap="false"
                    app:cardPreventCornerOverlap="false"
                    android:layout_margin="10dp"
                    android:background="#f4f2f2"
                    app:cardCornerRadius="4dp"
                    xmlns:card_view="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/studentImage"
                        android:layout_width="100dp"
                        android:layout_marginTop="16dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_account_circle_black_36dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:textSize="22dp"
                        android:gravity="center"
                        android:textStyle="italic"
                        android:id="@+id/studentName"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="Name"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_marginTop="10dp"
                    android:id="@+id/cardView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardPreventCornerOverlap="false"
                    app:cardPreventCornerOverlap="false"
                    android:layout_margin="10dp"
                    android:background="#f4f2f2"
                    app:cardCornerRadius="4dp"
                    xmlns:card_view="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Basic Info"
                            android:padding="12dp"
                            android:textColor="@color/colorAccent"
                            android:textSize="18dp"/>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="2px"
                            android:background="#dfdfdf"
                            android:layout_marginBottom="10dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="12dp"
                            android:paddingLeft="12dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Class"
                                android:textColor="@color/black"
                                android:textSize="19dp"
                                android:layout_weight="0.7"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="18dp"
                                android:id="@+id/studentClass"
                                android:text="Class"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="12dp"
                            android:paddingLeft="12dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Date Of Birth"
                                android:textColor="@color/black"
                                android:textSize="19dp"
                                android:layout_weight="0.7"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="18dp"
                                android:id="@+id/studentDOB"

                                android:text="12/10/2012"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="12dp"
                            android:paddingLeft="12dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Gender"
                                android:textColor="@color/black"
                                android:textSize="19dp"
                                android:layout_weight="0.7"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="18dp"
                                android:id="@+id/studentGender"
                                android:text="Male"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="12dp"
                            android:paddingLeft="12dp"
                            android:paddingBottom="12dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Session"
                                android:textColor="@color/black"
                                android:textSize="19dp"
                                android:layout_weight="0.7"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="18dp"
                                android:id="@+id/classSession"
                                android:text="2014/2015"/>

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="10dp"
                    android:id="@+id/cardView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardPreventCornerOverlap="false"
                    app:cardPreventCornerOverlap="false"
                    android:layout_margin="10dp"
                    android:background="#f4f2f2"
                    app:cardCornerRadius="4dp"
                    xmlns:card_view="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Parents Info"
                            android:padding="12dp"
                            android:textColor="@color/colorAccent"
                            android:textSize="18dp"/>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="2px"
                            android:background="#dfdfdf"
                            android:layout_marginBottom="10dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="12dp"
                            android:paddingLeft="12dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Father Name"
                                android:textColor="@color/black"
                                android:textSize="19dp"
                                android:layout_weight="0.8"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="18dp"
                                android:id="@+id/studentFatherName"

                                android:text="father name"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="12dp"
                            android:paddingLeft="12dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Mother Name"
                                android:textColor="@color/black"
                                android:textSize="19dp"
                                android:layout_weight="0.8"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="18dp"
                                android:id="@+id/studentMotherName"
                                android:text="Mother Name"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="12dp"
                            android:paddingLeft="12dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Contact No."
                                android:textColor="@color/black"
                                android:textSize="19dp"
                                android:layout_weight="0.8"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="18dp"
                                android:id="@+id/contactNo"

                                android:text="9035454815"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="12dp"
                            android:paddingLeft="12dp"

                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Email Id"
                                android:textColor="@color/black"
                                android:textSize="19dp"
                                android:layout_weight="0.8"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="18dp"
                                android:id="@+id/studentFEmail"

                                android:text="father@gmail.com"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="12dp"
                            android:paddingLeft="12dp"
                            android:paddingBottom="12dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Address"
                                android:textColor="@color/black"
                                android:textSize="19dp"
                                android:layout_weight="0.8"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="18dp"
                                android:id="@+id/studentAddress"
                                android:text="Address"/>

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="10dp"
                    android:id="@+id/cardView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardPreventCornerOverlap="false"
                    app:cardPreventCornerOverlap="false"
                    android:layout_margin="10dp"
                    android:background="#f4f2f2"
                    app:cardCornerRadius="4dp"
                    xmlns:card_view="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Evidances"
                            android:id="@+id/btnShowEvidence"
                            android:textColor="@color/white"
                            android:background="@drawable/loginbutton_selector"
                            android:layout_weight="1"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="4dp"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Assessments"
                            android:id="@+id/btnShowAssessment"
                            android:textColor="@color/white"
                            android:background="@drawable/loginbutton_selector"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>