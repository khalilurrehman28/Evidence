<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/frame"
    android:background="@color/white"
    android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl1"

            android:orientation="vertical">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/ll1">
        <TextView
            android:id="@+id/evidenceGrade"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="8dp"
            android:text="A1"
            android:maxLines="1"
            android:textSize="26dp"
            android:textStyle="bold|italic"
            android:gravity="center"
            android:fontFamily="serif-monospace"
            android:textColor="@color/green"
            android:background="@drawable/green_line"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="4dp"

        android:layout_toRightOf="@+id/ll1" >

        <TextView
            android:id="@+id/frameworkTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/evidenceTags"
            android:singleLine="true"
            android:text="created Date"
            android:textColor="#747373"
            android:textIsSelectable="false"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/evidenceTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:typeface="sans"
            android:text="Contact Name"
            android:textColor="#252323"
            android:textIsSelectable="false"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/evidenceTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:typeface="sans"
            android:layout_below="@+id/evidenceTitle"
            android:text="Tags"
            android:textColor="#134c74"
            android:textIsSelectable="false"
            android:textSize="15sp"
             />
    </RelativeLayout>
</RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:visibility="visible"
            android:layout_below="@+id/Rl"
            android:background="#dfdfdf" />
</LinearLayout>

</LinearLayout>