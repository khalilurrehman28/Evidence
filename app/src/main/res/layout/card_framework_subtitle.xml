<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="0.1dp"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/Rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:padding="8dp"
                android:layout_toRightOf="@+id/thumbnail"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/frameworkSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Framework Title"
                    android:textColor="#252323"
                    android:typeface="sans"
                    android:textSize="20sp"
                    android:gravity="center" />

                <!-- Artist Name -->
                <TextView
                    android:id="@+id/frameworkSubTitleScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/frameworkSubTitle"
                    android:textColor="#747373"
                    android:textSize="16sp"
                    android:visibility="visible"
                    android:text="Created on" />

                <!-- Rightend Arrow -->
                <ImageView android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:src="@drawable/preview"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="3px"
                android:visibility="visible"
                    android:layout_below="@+id/Rl"
                android:background="#dfdfdf" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>