<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_grdnt"
    tools:context="com.dupleit.kotlin.primaryschoolassessment.fragments.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/imgCapture"
            android:src="@drawable/ic_capture" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:layout_height="80dp"
                android:id="@+id/button_student_list"
                android:src="@drawable/ic_student_list" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:id="@+id/button_framework_list"
                android:layout_marginTop="32dp"
                android:src="@drawable/ic_framework" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:paddingRight="20dp"
                android:id="@+id/button_evidence_list"
                android:src="@drawable/ic_evidences" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_gravity="end|bottom"
        >
        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:id="@+id/button_show_class"
            android:src="@drawable/ic_change_class" />
    </LinearLayout>

</FrameLayout>
