<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:background="@drawable/home_grdnt"
        android:id="@+id/frame"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:TagsEditText="http://schemas.android.com/apk/res-auto"
        tools:context="com.dupleit.khalil.myapplication.fragments.FragmentOne">

        <!-- TODO: Update blank fragment layout -->

        <android.support.v7.widget.CardView
            android:id="@+id/notice_card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginTop="2dp"
            app:elevation="8dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="5dp"
            card_view:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add evidence in 2 simple steps"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Evidence Date"
                    android:layout_marginTop="10dp"
                    android:textColor="#565656"
                    android:textSize="17dp" />
                <EditText
                    android:id="@+id/etSelectedDate"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="52dp"
                    android:layout_below="@+id/etTitle"
                    android:inputType="date"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:hint="Select date"
                    android:background="@drawable/edittextstyle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Evidence for"
                    android:layout_marginTop="10dp"
                    android:textColor="#565656"
                    android:textSize="17dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Select student"
                    android:padding="15dp"
                    android:textSize="18dp"
                    android:id="@+id/studentName"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/edittextstyle"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="3px"
                    android:visibility="visible"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp"
                    android:background="#dfdfdf" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Photo(s)/Video(s)"
                    android:textColor="@color/black"
                    android:textSize="19dp" />
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/edittextstyle">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_plus"
                            android:id="@+id/imageView1"
                            android:scaleType="fitXY" />
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="24dp"
                            android:layout_alignBottom="@id/imageView1"
                            android:layout_alignRight="@id/imageView1"
                            android:layout_margin="8dp"
                            android:visibility="gone"
                            android:id="@+id/videoCamera1"
                            android:src="@drawable/video_camera"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/edittextstyle">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_plus"
                            android:id="@+id/imageView2"
                            android:scaleType="fitXY" />
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="24dp"
                            android:layout_alignBottom="@id/imageView2"
                            android:layout_alignRight="@id/imageView2"
                            android:layout_margin="8dp"
                            android:visibility="gone"
                            android:id="@+id/videoCamera2"
                            android:src="@drawable/video_camera"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittextstyle">
                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_plus"
                            android:scaleType="fitXY" />
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="23dp"
                            android:layout_alignBottom="@id/imageView3"
                            android:layout_alignRight="@id/imageView3"
                            android:layout_margin="8dp"
                            android:visibility="gone"
                            android:id="@+id/videoCamera3"
                            android:src="@drawable/video_camera"/>
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="3px"
                    android:visibility="visible"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp"
                    android:background="#dfdfdf" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comment"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittextstyle">
                    <EditText
                        android:id="@+id/etComment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:hint="Write your comment..."
                        android:background="@android:color/transparent"/>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tag(s)"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittextstyle">
                    <mabbas007.tagsedittext.TagsEditText
                        android:id="@+id/tagsEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:background="@android:color/transparent"
                        TagsEditText:allowSpaceInTag="true"
                        TagsEditText:tagsBackground="@drawable/square_default"
                        TagsEditText:tagsCloseImageRight="@drawable/tag_close" />

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="3px"
                    android:visibility="visible"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp"
                    android:background="#dfdfdf" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Framework(s)"
                    android:textColor="@color/black"
                    android:textSize="19dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:layout_marginTop="10dp"
                    android:textColor="#565656"
                    android:textSize="17dp" />
                <Spinner
                    android:background="@drawable/edittextstyle"
                    android:spinnerMode="dropdown"
                    android:id="@+id/spinnerParentFrameworkName"
                    android:layout_width="fill_parent"
                    android:minHeight="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="50dp"
                    android:elevation="1dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="framework Name"
                    android:layout_marginTop="10dp"
                    android:textColor="#565656"
                    android:textSize="17dp" />
                <Spinner
                    android:background="@drawable/edittextstyle"
                    android:spinnerMode="dropdown"
                    android:id="@+id/spinnerFramework"
                    android:layout_width="fill_parent"
                    android:minHeight="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="50dp"
                    android:elevation="1dp" />
                    <TextView
                        android:background="@drawable/edittextstyle"

                        android:id="@+id/tvNoFrameworkAvailable"
                        android:layout_width="fill_parent"
                        android:minHeight="30dp"
                        android:text="No framework"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="50dp"
                         />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:id="@+id/linearSubTitle"
                    android:visibility="gone"
                    android:background="@drawable/edittextstyle">
                    <TextView
                        android:id="@+id/frameworkTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:paddingBottom="6dp"
                        android:paddingRight="12dp"
                        android:paddingLeft="16dp"
                        android:textSize="19dp"
                        android:visibility="gone"
                        android:textStyle="bold|italic"
                        android:textColor="@color/black"
                        android:hint="Select frameworks"
                        android:background="@android:color/transparent"/>
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:id="@+id/recyclerSubTitle">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>
                
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/loginbutton_selector"
                    android:layout_weight="1"
                    android:id="@+id/btnCreate"
                    android:text="Create"
                    android:textSize="20dp"
                    android:layout_marginTop="16dp"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </FrameLayout>
</ScrollView>