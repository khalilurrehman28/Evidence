<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:id="@+id/frame"
        android:orientation="vertical"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="com.dupleit.khalil.myapplication.fragments.FragmentOne">

        <!-- TODO: Update blank fragment layout -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linear_shadow">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basic Info"
        android:background="@color/tab_background_selected"
        android:padding="8dp"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"/>
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">


        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginTop="3dp"
            app:elevation="8dp"

            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="3dp"
            card_view:cardCornerRadius="3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="8dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_weight="0.1"

                    android:src="@drawable/ic_name"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="16dp"
                    android:layout_weight="0.6"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="17dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:id="@+id/student_name"
                    android:textColor="@color/grey"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginTop="6dp"
            app:elevation="8dp"

            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="3dp"
            card_view:cardCornerRadius="3dp">
            <LinearLayout
                android:layout_width="match_parent"

                android:gravity="center"
                android:padding="8dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_weight="0.1"

                    android:src="@drawable/ic_gender1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="16dp"
                    android:layout_weight="0.6"

                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:gravity="end"
                    android:textSize="17dp"
                    android:layout_weight="1"
                    android:id="@+id/student_gender"
                    android:textColor="@color/grey"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_marginTop="6dp"
                app:elevation="8dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="3dp"
                card_view:cardCornerRadius="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_weight="0.1"
                        android:src="@drawable/ic_calender1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Date Of Birth"
                        android:textSize="16dp"
                        android:layout_weight="0.6"

                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="12/10/1995"
                        android:textSize="17dp"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:id="@+id/student_dob"
                        android:textColor="@color/grey"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_marginTop="6dp"
                app:elevation="8dp"

                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="3dp"
                card_view:cardCornerRadius="3dp">
                <LinearLayout
                    android:layout_width="match_parent"

                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_weight="0.1"

                        android:src="@drawable/ic_class"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Class"
                        android:textSize="16dp"
                        android:layout_weight="0.6"

                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:gravity="end"
                        android:textSize="17dp"
                        android:layout_weight="1"
                        android:id="@+id/student_class"
                        android:textColor="@color/grey"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="3dp"
                app:elevation="8dp"

                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="3dp"
                card_view:cardCornerRadius="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_weight="0.1"

                        android:src="@drawable/ic_calender1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Session"
                        android:textSize="16dp"
                        android:layout_weight="0.6"

                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="2017-2018"
                        android:textSize="17dp"
                        android:gravity="end"

                        android:layout_weight="1"
                        android:id="@+id/class_session"
                        android:textColor="@color/grey"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linear_shadow">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal Info"
                android:background="@color/tab_background_selected"
                android:padding="8dp"
                android:textColor="@color/colorAccent"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">


            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_marginTop="3dp"
                app:elevation="8dp"

                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="3dp"
                card_view:cardCornerRadius="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_weight="0.1"
                        android:src="@drawable/ic_father"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Father Name"
                        android:textSize="16dp"
                        android:layout_weight="0.6"

                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:gravity="end"

                        android:textSize="17dp"
                        android:layout_weight="1"
                        android:id="@+id/studentFatherName"
                        android:textColor="@color/grey"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_marginTop="6dp"
                app:elevation="8dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="3dp"
                card_view:cardCornerRadius="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_weight="0.1"
                        android:src="@drawable/ic_mother"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Mother Name"
                        android:textSize="16dp"
                        android:layout_weight="0.6"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Mother name"
                        android:textSize="17dp"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:id="@+id/studentMotherName"
                        android:textColor="@color/grey"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_marginTop="6dp"
                app:elevation="8dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="3dp"
                card_view:cardCornerRadius="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_weight="0.1"
                        android:src="@drawable/ic_contact"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Contact No."
                        android:textSize="16dp"
                        android:layout_weight="0.6"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="9876543210"
                        android:textSize="17dp"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:id="@+id/contactNo"
                        android:textColor="@color/grey"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="3dp"
                app:elevation="8dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="3dp"
                card_view:cardCornerRadius="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_weight="0.1"
                        android:src="@drawable/ic_mail"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Email ID"
                        android:textSize="16dp"
                        android:layout_weight="0.6"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="student@gmail.com"
                        android:textSize="17dp"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:id="@+id/studentFEmail"
                        android:textColor="@color/grey"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_marginTop="6dp"
                app:elevation="8dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="3dp"
                card_view:cardCornerRadius="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_weight="0.1"
                        android:src="@drawable/ic_marker"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textSize="16dp"
                        android:layout_weight="0.6"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textSize="17dp"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:id="@+id/studentAddress"
                        android:textColor="@color/grey"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linear_shadow">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Evidence(s) or Assessment "
            android:background="@color/tab_background_selected"
            android:padding="8dp"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginBottom="16dp">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginTop="6dp"
            app:elevation="8dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                 <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Evidences"
                    android:id="@+id/btnShowEvidence"
                    android:textSize="17dp"
                     android:layout_marginRight="3dp"
                    android:textColor="@color/white"
                    android:background="@color/colorAccent"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Assessments"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/btnShowAssessment"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:background="@color/colorPrimary"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    </LinearLayout>
</ScrollView>