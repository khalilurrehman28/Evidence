<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/frame"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:layout_margin="6dp"
        android:elevation="8dp"
        android:clickable="true"
        android:focusable="true"
        card_view:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp"
            android:id="@+id/layoutBackground"
            android:background="@drawable/rectangle_shape_2">




               <!-- <ImageView
                    android:id="@+id/myImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/circle_background" />
-->
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:id="@+id/ll1">
                        <TextView
                            android:id="@+id/evidenceGrade"
                            android:layout_width="70dp"
                            android:layout_height="65dp"
                            android:layout_margin="1dp"
                            android:text="A1"
                            android:maxLines="1"
                            android:textSize="28dp"
                            android:textStyle="bold|italic"
                            android:gravity="center"
                            android:fontFamily="serif-monospace"
                            android:textColor="@color/white"
                            android:background="@drawable/white_line"/>
                    </LinearLayout>



                <TextView
                    android:id="@+id/evidenceTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:paddingRight="3sp"
                    android:paddingLeft="3sp"
                    android:text="1sfkjbejkfbjiefiebfbbefbiefbibeifbibefibiefbibeifbeifbfiebiebfibeifbiebffefbefuffeubfeui0"
                    android:maxLines="2"
                    android:textSize="20sp"
                    android:textColor="@color/white" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp"
                    android:paddingStart="4dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:gravity="center"
                    android:layout_below="@id/evidenceTitle">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:paddingRight="8dp"
                        android:src="@drawable/ic_calendar_white"/>
                    <TextView
                        android:id="@+id/frameworkTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif"

                        android:text="Hello"

                        android:textColor="#fff"
                        android:scaleType="fitXY" />

                </LinearLayout>
            </LinearLayout>




        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>